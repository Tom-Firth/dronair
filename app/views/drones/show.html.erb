<div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-1">
        <div class="elements">
          <div class="pic"><%= cl_image_tag @drone.photo, height: 270, width: 360, crop: :fill %></div>
          <div class="elem"><h2><%= @drone.name %></h2></div>
          <div class="elem"><p><%= @drone.brand %></p></div>
          <div class="elem"><p><%= @drone.autonomy %></p></div>
          <div class="elem"><p><%= @drone.price %></p></div>
          <% @drone.bookings.each do |booking| %>
          <%= booking.days %>
          <% end %>
        </div>
      </div>
      <div class="col-md-4 col-md-offset-1">
        <%= simple_form_for([@drone, @booking]) do |f| %>
         <%= f.input :days %>
          <%= f.submit %>
          <% end %>

      </div>
    </div>
</div>
      <%= link_to "Back to the drones'list", root_path  %>